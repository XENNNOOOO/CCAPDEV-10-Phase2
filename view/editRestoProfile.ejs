<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Restaurant Profile</title>
  <script src="https://kit.fontawesome.com/e9d3d528d3.js" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/edit_resto_profile_style.css">
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
      <img src="/images/logo.png" alt="Bloemen Bites Logo">
    </div>
    <div class="navigation">
      <a href="/restaurant/<%= encodeURIComponent(restaurant._id) %>/profile">
        <i class="fa-solid fa-user" style="color: #003399;"></i>
        <p>Profile</p>
      </a>     
      <a href="/suli">
        <i class="fa-solid fa-arrow-right-from-bracket" style="color: #fc6467;"></i>
        <p>Logout</p>
      </a>    
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="content">
    <h1>Edit Profile</h1>
    
    <form id="edit-profile-form" 
          action="/restaurant/<%= encodeURIComponent(restaurant._id) %>/updateProfile" 
          method="POST" 
          enctype="multipart/form-data">
      
      <!-- Profile Picture -->
      <div class="form-group">
          <label for="profile-picture">Profile Picture</label>
          <div class="profile-picture-container">
              <img id="profile-picture-preview" 
                   src="<%= restaurant.pfp && restaurant.pfp.data 
                         ? 'data:' + restaurant.pfp.contentType + ';base64,' + restaurant.pfp.data.toString('base64') 
                         : '/images/pfp.png' %>" 
                   alt="Profile Picture">
              <input type="file" id="profile-picture" name="pfp" accept="image/*" onchange="previewImage(event)">
          </div>
      </div>

      <!-- Username -->
      <div class="form-group">
          <label for="restoName">Username</label>
          <input type="text" id="restoName" name="restoName" value="<%= restaurant.restoName || '' %>">
      </div>

      <!-- Description -->
      <div class="form-group">
          <label for="description">Description</label>
          <textarea id="description" name="description"><%= restaurant.description || '' %></textarea>
      </div>

      <!-- Location -->
      <div class="form-group">
          <label for="location">Location</label>
          <input type="text" id="location" name="location" value="<%= restaurant.location || '' %>">
      </div>

      <!-- Contact Number -->
      <div class="form-group">
          <label for="phone">Contact Number</label>
          <input type="text" id="phone" name="phone" value="<%= restaurant.phone || '' %>">
      </div>

      <!-- Password -->
      <div class="form-group">
          <label for="password">Update Password</label>
          <input type="password" id="password" name="password">
      </div>

      <!-- Submit Button -->
      <button type="submit">Save Changes</button>
    </form>

  </div>

  <!-- Reference External JS File -->
  <script src="/js/editRestoProfile_script.js"></script>

</body>
</html>
