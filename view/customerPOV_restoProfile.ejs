<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Restaurant Account</title>
  <script src="https://kit.fontawesome.com/e9d3d528d3.js" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/public/css/customerPOV_restoProfile_style.css">
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
        <img src="/public/images/logo.png" alt="Bloemen Bites Logo">
    </div>
    <div class="navigation">      
        <a href="/<%= loggedUserEmail %>/customer-home-feed">
          <i class="fa-solid fa-magnifying-glass" style="color: #003399;"></i>
          <p>Search</p>
        </a>
        <a onclick="updateContent('Reviews button clicked!')">
          <i class="fa-solid fa-star" style="color: #003399;"></i>
          <p>Reviews</p>
        </a>
        <a onclick="updateContent('Profile button clicked!')">
          <i class="fa-solid fa-user" style="color: #003399;"></i>
          <p>Profile</p>
        </a>
        <a onclick="updateContent('Logout button clicked!')">
          <i class="fa-solid fa-arrow-right-from-bracket" style="color: #fc6467;"></i>
          <p>Logout</p>
        </a>
    </div>
  </div>
  
  <!-- Main Content Area --> 
  <div class="content">
    <div class="profile-section">
      <div class="profile-photo-section">
        <img src="/profile-pics/<%= restaurant?._id || 'default.png' %>" alt="Restaurant Profile Picture">
        <h2 id="reviews">Reviews</h2>
      </div>  

      <div class="profile-details">
          <h2 id="user-name"><%= restaurant?.restoName || "Unknown Restaurant" %></h2>
          <p><%= restaurant?.location || "No Location Provided" %></p>
          <p><%= restaurant?.phone || "No Phone Provided" %> | <%= restaurant?._id || "Unknown ID" %></p>

          <div class="tags">
            <% (restaurant?.tags || "").split(",").map(tag => tag.trim()).forEach(tag => { %>
                <span class="tag"><%= tag %></span>
            <% }); %>
          </div>

          <div class="description">
            <p id="user-description"><%= restaurant?.description || "No description available." %></p>
          </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <div id="reviews-container">
      <% if (Array.isArray(reviews) && reviews.length > 0) { %>
        <% reviews.forEach(review => { %>
          <div class="review-post">
            <p class="review-user-name"><%= customerUsernames?.[review.customerEmail] || "Anonymous" %></p>
            <h1 class="review-title"><%= review?.reviewTitle || "Untitled Review" %></h1>
            <p class="review-text"><%= review?.reviewText || "No Review Text Provided" %></p>
          </div>
        <% }); %>
      <% } else { %>
        <p>No reviews yet.</p>
      <% } %>
    </div>
  </div>

<script src="/public/js/restoProfile_script.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
      displayRating(<%= restaurant && restaurant.rating ? restaurant.rating : 0 %>);
  });
</script>


</body>
</html>
