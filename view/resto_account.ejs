<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Restaurant Account</title>
  <script src="https://kit.fontawesome.com/e9d3d528d3.js" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="styles/resto_account_styles.css">
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
      <img src="images/logo.png" alt="Bloemen Bites Logo">
    </div>
    <div class="navigation">
        <a href="/logout">
            <i class="fa-solid fa-arrow-right-from-bracket" style="color: #fc6467;"></i>
        <p>Logout</p>
      </a>
    </div>
  </div>
  
  <!-- Main Content Area -->
<div class="content">
  <div class="profile-section">
    <!-- Profile Photo and Button -->
    <div class="profile-photo-section">
      <img id="profile-photo" src="png.jpg" alt="Profile Photo">
      <button class="editpfp-button">Edit Profile</button>
      <h2 id="reviews">Reviews</h2>
    </div>

    <!-- Profile Details -->
    <div class="profile-details">
      <h2 id="user-name"></h2>
      <p id="user-email"></p>
      <div class="tags">
        <span class="tag"></span>
        <span class="tag"></span>
      </div>
      <div class="description">
        <p id="user-description">Welcome to Bloemen Bites! I'm a passionate chef specializing in creating unique culinary experiences.</p>
      </div>
      <!-- Rating Section -->
      <div class="rating">
        <div id="rating-stars">
          <!-- Static stars will be dynamically populated -->
        </div>
        <span id="rating-number"></span> <!-- Display rating number beside stars -->
      </div>
    </div>
  </div>

  <!-- New Reviews Container -->
  <div id="reviews-container" class="reviews-container">
    <div id="reviews-list" class="reviews-list">
      <!-- Review posts will be dynamically inserted here -->
    </div>
  </div>
</div>

<script src="restaurant_account_page_script.js"></script>

</body>
</html>