<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Restaurant Account</title>
  <script src="https://kit.fontawesome.com/e9d3d528d3.js" crossorigin="anonymous"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/resto_account_styles.css">
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
      <img src="images/logo.png" alt="Bloemen Bites Logo">
    </div>
    <div class="navigation">
        <a href="/logout">
            <i class="fa-solid fa-arrow-right-from-bracket" style="color: #fc6467;"></i>
            <p>Logout</p>
        </a>
    </div>
  </div>
  
  <!-- Main Content Area -->
<div class="content">
  <div class="profile-section">
    <!-- Profile Photo and Button -->
    <div class="profile-photo-section">
        <img id="profile-photo" src="/profile-pics/<%= restaurant.restoName %>.jpg" alt="Profile Photo">
      <button class="editpfp-button">Edit Profile</button>
      <h2 id="reviews">Reviews</h2>
    </div>

    <!-- Profile Details -->
    <div class="profile-details">
        <h2 id="user-name"><%= restaurant.restoName %></h2>
        <p id="user-email"><%= restaurant.email %></p>
      <div class="tags">
        <% if (Array.isArray(restaurant.tags)) { %>
            <% restaurant.tags.forEach(tag => { %>
              <span class="tag"><%= tag %></span>
            <% }); %>
          <% } else { %>
            <span class="tag"><%= restaurant.tags %></span>
          <% } %>
      </div>
      <div class="description">
        <p id="user-description"><%= restaurant.description %></p>
    </div>
      <!-- Rating Section -->
      <div class="rating">
        <div id="rating-stars">
          <!-- Static stars will be dynamically populated -->
        </div>
        <span id="rating-number"><%= restaurant.rating.toFixed(1) %></span> <!-- Display rating -->
      </div>
    </div>
  </div>

  <!-- New Reviews Container -->
  <div id="reviews-container" class="reviews-container">
    <div id="reviews-list" class="reviews-list">
      <!-- Review posts will be dynamically inserted here -->
    </div>
  </div>
</div>

<script src="/controller/---.js"></script>

</body>
</html>