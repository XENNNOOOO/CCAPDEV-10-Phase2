<!DOCTYPE html>
<html lang="en">
<head>


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="https://kit.fontawesome.com/e9d3d528d3.js" crossorigin="anonymous"></script>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link 
    href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" 
    rel="stylesheet"
  >
    <title>Admin Reports</title>
    <link rel="stylesheet" href="/css/adminReports_style.css">
</head>
<body>

    <!-- Sidebar (Reusing the existing one) -->
    <div class="sidebar">
        <div class="logo">
            <img src="/images/logo.png" alt="Bloemen Bites Logo">
        </div>
        <div class="navigation">
            <a href="/admin/<%= encodeURIComponent(adminId) %>/search">
                <i class="fa-solid fa-magnifying-glass"></i>
                <p>Search</p>
            </a>
            <a href="#">
                <i class="fa-solid fa-star"></i>
                <p>Reviews</p>
            </a>
            <a href="/admin/<%= encodeURIComponent(adminId) %>/settings">
                <i class="fa-solid fa-gear"></i>
                <p>Settings</p>
            </a>
            <a href="/logout" class="logout">
                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                <p>Logout</p>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <!-- Main Content -->
    <div class="reports-container">
      <h1>Reports</h1>

      <!-- View Switch Buttons -->
      <div class="view-switch">
        <button id="view-table" class="active-view">üìä Table View</button>
        <button id="view-details">üìñ Detailed View</button>
    </div>

    
      <table>
          <thead>
              <tr>
                  <th>Report ID</th>
                  <th>Reported by</th>
                  <th>Date Reported</th>
                  <th>Resolved?</th>
                  <th>Reason</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
              <% reports.forEach(report => { %>
                  <tr>
                      <td><%= report._id %></td>
                      <td>@<%= report.reporterUsername %></td>
                      <td><%= new Date(report.dateReported).toLocaleString() %></td>
                      <td>
                          <% if (report.isResolved) { %>
                              ‚úÖ Resolved
                          <% } else { %>
                              ‚ùå Pending
                          <% } %>
                      </td>
                      <td><%= report.reason %></td>
                      <td>
                          <% if (!report.isResolved) { %>
                              <form action="/admin/<%= adminId %>/reports/<%= report._id %>/resolve" method="POST">
                                  <button type="submit" class="resolve-btn">Resolve</button>
                              </form>
                          <% } else { %>
                              <button class="disabled-btn" disabled>Resolved</button>
                          <% } %>
                      </td>
                  </tr>
              <% }) %>
          </tbody>
      </table>
  </div>

</body>
</html>
